<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/regbg"
    tools:context="com.example.jaya.tenant.OwnerRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Registration Form :"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="@color/txtwhite"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstnameownreg"
                android:layout_weight="1"
                android:hint="FirstName"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/opacitywhite"
                android:backgroundTint="@color/opacitywhite"
                android:padding="10dp"
                android:textColor="@color/txtwhite"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lastnameownreg"
                android:layout_weight="1"
                android:hint="LastName"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/opacitywhite"
                android:backgroundTint="@color/opacitywhite"
                android:textColor="@color/txtwhite"

                />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameownreg"
            android:hint="Username"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailownreg"
            android:hint="Email"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordownreg"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/confirmpasswordownreg"
            android:hint="ConfirmPassword"
            android:inputType="textPassword"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   Select your Gender"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"

            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/genderownreg"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"

            >
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dobownreg"
            android:clickable="true"
            android:editable="false"
            android:hint="DOB"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressownreg"
            android:padding="10dp"
            android:hint="Address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phnoownreg"
            android:hint="Phone no"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aadhaarnoownreg"
            android:hint="Aadhaar no"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mentionownreg"
            android:hint="Mention you are A Student,Worker or Other"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColorHint="@color/opacitywhite"
            android:backgroundTint="@color/opacitywhite"
            android:textColor="@color/txtwhite"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerbtnownreg"
            android:padding="15dp"
            android:text="register"
            android:background="@color/green"
            android:textColor="@color/txtwhite"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>
</ScrollView>
